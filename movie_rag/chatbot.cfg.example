{
    "_comment": "MovieRAG Configuration Example - Copy this to chatbot.cfg and customize",
    "_comment_docker": "For Docker deployment, use environment variables instead of hardcoded values",
    
    "host": "${HOST:-0.0.0.0}",
    "port": "${PORT:-5005}",
    
    "_comment_data_pipeline": "Data pipeline directories (relative to config file)",
    "landing_area": "${LANDING_AREA:-../data/01_landing}",
    "staging_area": "${STAGING_AREA:-../data/02_staging}", 
    "prepared_area": "${PREPARED_AREA:-../data/03_prepared}",
    
    "_comment_data_stores": "Database and vector store filenames",
    "sql_db_fname": "${SQL_DB_FNAME:-movies.db}",
    "embedding_store_fname": "${EMBEDDING_STORE_FNAME:-movie_embeddings.json}",
    
    "_comment_models": "LLM and embedding model configuration",
    "model_provider": "${MODEL_PROVIDER:-openai}",
    "model_name": "${MODEL_NAME:-gpt-4o-mini}",
    "embedding_model": "${EMBEDDING_MODEL:-text-embedding-3-small}",
    "openai_api_key": "${OPENAI_API_KEY}",
    
    "_comment_model_alternatives": "Alternative model configurations:",
    "_alt_ollama": "Set MODEL_PROVIDER=ollama and MODEL_NAME=qwen2.5:7b for local inference",
    "_alt_local_embeddings": "For local embeddings with Ollama, use EMBEDDING_MODEL=nomic-embed-text",
    "_alt_api_key": "Set your OpenAI API key as OPENAI_API_KEY environment variable",
    
    "_comment_neo4j": "Neo4j graph database (optional - currently disabled)",
    "graph_url": "${GRAPH_URL:-}",
    "graph_username": "${GRAPH_USERNAME:-}",
    "graph_password": "${GRAPH_PASSWORD:-}",
    
    "_comment_behavior": "Application behavior settings",
    "with_history": "${WITH_HISTORY:-true}",
    "verbose": "${VERBOSE:-true}",
    "delete_table": "${DELETE_TABLE:-false}",
    "delete_graph": "${DELETE_GRAPH:-false}",
    
    "_comment_environment_variables": "Available environment variables for Docker deployment:",
    "_env_vars": [
        "HOST - Server host (default: 0.0.0.0)",
        "PORT - Server port (default: 5005)",
        "LANDING_AREA - Raw data directory (default: ../data/01_landing)",
        "STAGING_AREA - Staged data directory (default: ../data/02_staging)",
        "PREPARED_AREA - Prepared data directory (default: ../data/03_prepared)",
        "SQL_DB_FNAME - SQLite database filename (default: movies.db)",
        "EMBEDDING_STORE_FNAME - Vector store filename (default: movie_embeddings.json)",
        "MODEL_PROVIDER - LLM provider (default: openai)",
        "MODEL_NAME - LLM model name (default: gpt-4o-mini)",
        "EMBEDDING_MODEL - Embedding model (default: text-embedding-3-small)",
        "OPENAI_API_KEY - OpenAI API key (required)",
        "GRAPH_URL - Neo4j URL (optional)",
        "GRAPH_USERNAME - Neo4j username (optional)",
        "GRAPH_PASSWORD - Neo4j password (optional)",
        "WITH_HISTORY - Enable conversation history (default: true)",
        "VERBOSE - Enable verbose logging (default: true)",
        "DELETE_TABLE - Reset database on startup (default: false)",
        "DELETE_GRAPH - Reset graph on startup (default: false)"
    ]
}
